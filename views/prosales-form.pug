// Navigation section
nav
  ul
    li
      a(href='/dashboard') Dashboard
    li
      a(href='/creditsales') Credit Form
    li
      a(href='/cashsales') Cash Sales Form
    //- li
    //-   a(href='/procurement') Admin
    //- li
    //-   a(href='/cashsalesreports') Reports
// form section
.container
  form#salesform.structure(action='/cashsales' method='POST')
    .form-head.col-md-12
      h1
        | KGL
        br
        | CASH SALE
    // Section one
    .form-row
      .form-group.col-md-6
        label(for='inputprodname') Name of Item
        input#inputprodname.form-control(type='text' name='inputprodname' placeholder='Enter name of Item')
        i.fa-solid.fa-circle-check
        i.fa-solid.fa-circle-exclamation
        p
      .form-group.col-md-6
        label(for='inputamountpaid') Amount Paid
        input#inputamountpaid.form-control(type='number' name='inputamountpaid' placeholder='Enter Amount Paid')
        i.fa-solid.fa-circle-check
        i.fa-solid.fa-circle-exclamation
        p
      .form-group.col-md-6
        label(for='inputtonnage') Weight in Kilograms
        input#inputtonnage.form-control(type='number' name='inputtonnage' placeholder='Enter kgs of produce')
        i.fa-solid.fa-circle-check
        i.fa-solid.fa-circle-exclamation
        p
      .form-group.col-md-6
        label(for='inputdatentime') Date &amp; Time of sale
        input#inputdatentime.form-control(type='datetime-local' name='inputdatentime' placeholder='')
        i.fa-solid.fa-circle-check
        i.fa-solid.fa-circle-exclamation
        p
    // Section two
    .form-row
      .form-group.col-md-6
        label(for='inputbuyersname') Buyers Name
        input#inputbuyersname.form-control(type='text' name='inputbuyersname' placeholder='Enter Name of Buyer')
        i.fa-solid.fa-circle-check
        i.fa-solid.fa-circle-exclamation
        p
      .form-group.col-md-6
        label(for='inputsaleagentname') Sales Agents Name
        input#inputsaleagentname.form-control(type='text' name='inputsaleagentname' placeholder='Enter Name of Sale Agent')
        i.fa-solid.fa-circle-check
        i.fa-solid.fa-circle-exclamation
        p
    button.btn(type='submit') Add Sale
// Footer section
//
  <div class="main-footer">
  <p>Developed by Jeiff</p>
