// Navigation section
nav
  ul
    li
      a(href='/dashboard') Dashboard
    li
      a(href='/creditsales') Credit Form
    li
      a(href='/cashsales') Cash Sales Form
    li
      a(href='/procurement') Admin
    li
      a(href='') Reports
// Reporting table
.dash-container
  table.table.table-sm
    thead
      tr
        th(scope='col') Buyer
        th(scope='col') NIN
        th(scope='col') Location
        th(scope='col') Contact
        th(scope='col') Amount Due
        th(scope='col') Due Date
        th(scope='col') Product  
        th(scope='col') Product Type
        th(scope='col') Tonnage 
        th(scope='col') Dispatch Date 
        th(scope='col') Agent
        th(scope='col') Action
        th(scope='col') Action
    tbody 
        if creditsales.length 
        each creditsale in creditsales 
            tr 
                td #{creditsale.buyername}
                td #{creditsale.nin}
                td #{creditsale.location}
                td #{creditsale.buyercontact}
                td #{creditsale.amountdue}
                td #{creditsale.duedate}
                td #{creditsale.prodname}
                td #{creditsale.prodtype}
                td #{creditsale.tonnage}
                td #{creditsale.dispatchdate}
                td #{creditsale.agentname}
                
                
                td 
                  a(href='/updatecreditsale/'+creditsale._id)
                  button.btn.btn-primary Update
                td 
                  form(method='get' action='/deletecreditsale/'+creditsale._id)
                    console.log(#{cashsale._id})
                    input(type="hidden" name="delete" value=creditsale._id)
                    button.btn.btn-danger(type="submit" ) Delete 
