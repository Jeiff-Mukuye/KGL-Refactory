// Reporting table
.dash-container
  .row 
    .col-md-6 
      .card-body 
        p 
          h5 Total Revenue
        p  
          h5 #{total.totalIncome} Ugx 
    .col-md-6 
      .card-body 
        p 
          h5 Total Tonnage Sold
        p  
          h5 #{total.totalTonnage} Tons 
  table.table.table-sm
    thead
      tr
        th(scope='col') Item
        th(scope='col') Amount
        th(scope='col') Tonnage
        th(scope='col') Date
        th(scope='col') Buyer
        th(scope='col') Agent
        th(scope='col') Action
        th(scope='col') Action
    tbody 
        if cashsales.length 
        each cashsale in cashsales 
            tr 
                td #{cashsale.prodname}
                td #{cashsale.amountpaid}
                td #{cashsale.tonnage}
                td #{cashsale.date}
                td #{cashsale.buyername}
                td #{cashsale.agentname}
                td 
                  a.btn.btn-primary(href='/updatecashsale/'+cashsale._id) Update
                  
                td 
                  form(method='get' action='/deletecashsale/'+cashsale._id)
                    console.log(#{cashsale._id})
                    input(type="hidden" name="delete" value=cashsale._id)
                    button.btn.btn-danger(type="submit" ) Delete 
