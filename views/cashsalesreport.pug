// Reporting table
.dash-container
  table.table.table-sm
    thead
      tr
        th(scope='col') Item
        th(scope='col') Amount
        th(scope='col') Tonnage
        th(scope='col') Date
        th(scope='col') Buyer
        th(scope='col') Agent
    tbody 
        if cashsales.length 
        each cashsale in cashsales 
            tr 
                td #{cashsale.prodname}
                td #{cashsale.amountpaid}
                td #{cashsale.tonnage}
                td #{cashsale.date}
                td #{cashsale.buyername}
                td #{cashsale.agentname}
