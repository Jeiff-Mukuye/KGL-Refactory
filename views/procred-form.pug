// Navigation section
nav
  ul
    li
      a(href='/dashboard') Dashboard
    li
      a(href='/creditsales') Credit Form
    li
      a(href='/cashsales') Cash Sales Form
    //- li
    //-   a(href='/procurement') Admin
    //- li
    //-   a(href='/cashsalesreports') Reports
// form section
.container
  form#credform.structure(action='/creditsales' method='POST')
    .form-head.col-md-12
      h1
        | KGL
        br
        | CREDIT SALE
    // Section one
    .form-row
      .form-group.col-md-3
        label(for='inputbuyername') Name of Buyer
        input#inputbuyername.form-control(type='text' name='inputbuyername' placeholder='Enter name of Buyer')
        i.fa-solid.fa-circle-check
        i.fa-solid.fa-circle-exclamation
        p
      .form-group.col-md-3
        label(for='inputnin') National ID number
        input#inputnin.form-control(type='text' name='inputnin' placeholder='Enter NIN')
        i.fa-solid.fa-circle-check
        i.fa-solid.fa-circle-exclamation
        p
      .form-group.col-md-3
        label(for='inputlocation') Location
        input#inputlocation.form-control(type='number' name='inputlocation' placeholder='Enter Address of buyer')
        i.fa-solid.fa-circle-check
        i.fa-solid.fa-circle-exclamation
        p
      .form-group.col-md-3
        label(for='inputbuyercontact') Buyer Contact
        input#inputbuyercontact.form-control(type='number' name='inputbuyercontact' placeholder='Enter Buyer Contact')
        i.fa-solid.fa-circle-check
        i.fa-solid.fa-circle-exclamation
        p
    // Section two
    .form-row
      .form-group.col-md-3
        label(for='inputamountdue') Amount Due
        input#inputamountdue.form-control(type='number' name='inputamountdue' placeholder='Enter Amount Due')
        i.fa-solid.fa-circle-check
        i.fa-solid.fa-circle-exclamation
        p
      .form-group.col-md-3
        label(for='inputduedate') Due Date
        input#inputduedate.form-control(type='date' name='inputduedate' placeholder='Enter Due Date')
        i.fa-solid.fa-circle-check
        i.fa-solid.fa-circle-exclamation
        p
      .form-group.col-md-3
        label(for='inputprodname') Item Name
        input#inputprodname.form-control(type='text' name='inputprodname' placeholder='Enter name of Item')
        i.fa-solid.fa-circle-check
        i.fa-solid.fa-circle-exclamation
        p
      .form-group.col-md-3
        label(for='inputprodtype') Item Type
        input#inputprodtype.form-control(type='text' name='inputprodtype' placeholder='Enter Type of Item')
        i.fa-solid.fa-circle-check
        i.fa-solid.fa-circle-exclamation
        p
    // Section three
    .form-row
      .form-group.col-md-4
        label(for='inputtonnage') Weight in Kilograms
        input#inputtonnage.form-control(type='number' name='inputtonnage' placeholder='Enter kgs of produce')
        i.fa-solid.fa-circle-check
        i.fa-solid.fa-circle-exclamation
        p
      .form-group.col-md-4
        label(for='inputdispatchdate') Dispatch Date
        input#inputdispatchdate.form-control(type='date' name='inputdispatchdate' placeholder='')
        i.fa-solid.fa-circle-check
        i.fa-solid.fa-circle-exclamation
        p
      .form-group.col-md-4
        label(for='inputsaleagentname') Sales Agents Name
        input#inputsaleagentname.form-control(type='text' name='inputsaleagentname' placeholder='Enter Name of Sale Agent')
        i.fa-solid.fa-circle-check
        i.fa-solid.fa-circle-exclamation
        p
      button.btn(type='submit') Add Credit Sale
// Footer section
