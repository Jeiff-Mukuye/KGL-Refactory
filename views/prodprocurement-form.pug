// form section
.container
  form#proform.structure(action='/procurement' method='POST')
    .form-head.col-md-12
      h1
        | KGL
        br
        | PRODUCE PROCUREMENT
    // Section one
    .form-row
      .form-group.col-md-3
        label(for='inputprodname') Name of Item
        input#inputprodname.form-control(type='text' name='inputprodname' placeholder='Enter name of Item')
        i.fa-solid.fa-circle-check
        i.fa-solid.fa-circle-exclamation
        p
      .form-group.col-md-3
        label(for='inputprodtype') Type of Item
        input#inputprodtype.form-control(type='text' name='inputprodtype' placeholder='Enter Type of Item')
        i.fa-solid.fa-circle-check
        i.fa-solid.fa-circle-exclamation
        p
      .form-group.col-md-3
        label(for='inputprocdate') Date of Procurement
        input#inputprocdate.form-control(type='date' name='inputprocdate' placeholder='')
        i.fa-solid.fa-circle-check
        i.fa-solid.fa-circle-exclamation
        p
      .form-group.col-md-3
        label(for='inputproctime') Time of Procurement
        input#inputproctime.form-control(type='time' name='inputproctime' placeholder='')
        i.fa-solid.fa-circle-check
        i.fa-solid.fa-circle-exclamation
        p
    // Section two
    .form-row
      .form-group.col-md-3
        label(for='inputprodcost') Cost of Item
        input#inputprodcost.form-control(type='number' name='inputprodcost' placeholder='Enter Cost of Item')
        i.fa-solid.fa-circle-check
        i.fa-solid.fa-circle-exclamation
        p
      .form-group.col-md-3
        label(for='inputtonnage') Weight in Kilograms
        input#inputtonnage.form-control(type='number' name='inputtonnage' placeholder='Enter kgs of produce')
        i.fa-solid.fa-circle-check
        i.fa-solid.fa-circle-exclamation
        p
      .form-group.col-md-3
        label(for='inputdealername') Dealers&apos; Name
        input#inputdealername.form-control(type='text' name='inputdealername' placeholder='Enter name of Dealer')
        i.fa-solid.fa-circle-check
        i.fa-solid.fa-circle-exclamation
        p
      .form-group.col-md-3
        label(for='inputdealercontact') Buyer Contact
        input#inputdealercontact.form-control(type='number' name='inputdealercontact' placeholder='Enter Contact of Dealer')
        i.fa-solid.fa-circle-check
        i.fa-solid.fa-circle-exclamation
        p
      // Section three
      .form-group.col-md-4
        label(for='inputbranchname') Name of Branch
        input#inputbranchname.form-control(type='text' name='inputbranchname' placeholder='Enter Name of Branch')
        i.fa-solid.fa-circle-check
        i.fa-solid.fa-circle-exclamation
        p
      .form-group.col-md-4
        label(for='inputbranchcontact') Branch contact
        input#inputbranchcontact.form-control(type='text' name='inputbranchcontact' placeholder='Enter Item Price')
        i.fa-solid.fa-circle-check
        i.fa-solid.fa-circle-exclamation
        p
      .form-group.col-md-4
        label(for='inputsaleprice') Price of sale
        input#inputsaleprice.form-control(type='number' name='inputsaleprice' placeholder='Enter Price to be sold at')
        i.fa-solid.fa-circle-check
        i.fa-solid.fa-circle-exclamation
        p
    button.btn(type='submit') Add Produce
