// form section
.container
  form.structure(action='/procurement' method='POST')
    .form-head.col-md-12
      h1
        | KGL
        br
        | PRODUCE PROCUREMENT
    // Section one
    .form-row
      .form-group.col-md-3
        //- label(for='inputprodname') Name of Item
        input#inputprodname.form-control(type='text' name='prodname' placeholder='Enter name of Item')
      .form-group.col-md-3
        //- label(for='inputprodtype') Type of Item
        input#inputprodtype.form-control(type='text' name='prodtype' placeholder='Enter Type of Item')
      .form-group.col-md-3
        //- label(for='inputprocdate') Date of Procurement
        input#inputprocdate.form-control(type='date' name='date' placeholder='')
      .form-group.col-md-3
        //- label(for='inputproctime') Time of Procurement
        input#inputproctime.form-control(type='time' name='time' placeholder='')
    // Section two
    .form-row
      .form-group.col-md-3
        //- label(for='inputprodcost') Cost
        input#inputprodcost.form-control(type='number' name='prodcost' placeholder='Enter Cost of Item')
      .form-group.col-md-3
        //- label(for='inputtonnage') Weight in Kilograms
        input#inputtonnage.form-control(type='number' name='tonnage' placeholder='Enter kgs of produce')
      .form-group.col-md-3
        //- label(for='inputitemprice') Dealers&apos; Name
        input#inputdealername.form-control(type='text' name='dealername' placeholder='Enter name of Dealer')
      .form-group.col-md-3
        //- label(for='inputdealercontact') Buyer Contact
        input#inputdealercontact.form-control(type='number' name='dealercontact' placeholder='Enter Contact of Dealer')
      // Section three
      .form-group.col-md-6
        //- label(for='inputitemprice') Price of Item
        input#inputitemprice.form-control(type='text' name='itemprice' placeholder='Enter Item Price')
      .form-group.col-md-6
        //- label(for='inputbranchname') Name of Branch
        input#inputbranchname.form-control(type='text' name='branchname' placeholder='Enter Name of Branch')
    button.btn(type='submit') Add Produce
